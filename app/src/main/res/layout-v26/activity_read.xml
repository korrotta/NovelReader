<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:scrollbars="vertical"
    tools:context=".ReadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/novelNameRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chapterListRead"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_corner_bg"
                android:rotationY="180"
                android:src="@drawable/toc"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/previousChapterRead"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corner_bg"
                android:src="@drawable/before"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/chapterNameRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/chaptername"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/nextChapterRead"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_corner_bg"
                android:src="@drawable/next"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/findTextRead"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corner_bg"
                android:src="@drawable/search"
                app:tint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/server1Read"
                android:tooltipText="Server 1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_corner_bg"
                android:src="@drawable/server"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/server2Read"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corner_bg"
                android:src="@drawable/server"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/themeRead"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corner_bg"
                android:src="@drawable/next"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/textFormatRead"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corner_bg"
                android:src="@drawable/font"
                app:tint="@color/black" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>